class Node:
    def __init__(self,data):
        self.data=data
        self.next=None

    def description(self):
        print(self.data)



class LL:
    def __init__(self):
        self.head=None

    #function to insert a new node at the begining

    def Push(self,new_data):
        new_node=Node(new_data)
        new_node.next=self.head
        self.head=new_node


    def reverse(self):
        prev=None
        current=self.head
        while(current is not None):
            temp= current.next
            current.next=prev
            prev=current
            current=temp
        self.head=prev

    def append(self, new_data):
        new_node=Node(new_data)
        if (self.head == None):
            self.head=new_node
            return
        last = self.head
        while(last.next is not None):
            last=last.next
        last.next=new_node

    def insertAfter(self, prev_node,new_data):
        if(prev_node == None):
            print("Not in Linked List")
            return

        new_node= Node(new_data)
        new_node.next=prev_node.next
        prev_node=new_node


    def printList(self):
        temp=self.head
        while(temp):
            print(temp.data)
            temp=temp.next




